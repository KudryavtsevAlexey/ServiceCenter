@model IEnumerable<Order>
<div class="container-fluid mt-5">
	<div class="text-center mb-3">
		<h3>Order management</h3>
	</div>
	<div class="text-center">
		<a class="btn btn-success" asp-controller="Panel" asp-action="CreateOrder">Create order</a>
	</div>
	<div class="mt-4">
		@if (Model.Count()!=0)
		{
			<table class="table">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Client email</th>
						<th scope="col">Client first name</th>
						<th scope="col">Client last name</th>
						<th scope="col">Device name</th>
						<th scope="col">Type</th>
						<th scope="col">On guarantee</th>
						<th scope="col">Amount to pay</th>
						<th scope="col">Master first name</th>
						<th scope="col">Master last name</th>
					</tr>
				</thead>
				<tbody>
					@{
						int id = 1;
					}
					@foreach (var order in Model)
					{
					<tr>
						<th scope="col">@(id++)</th>
						<td>@order.Client.Email</td>
						<td>@order.Client.FirstName</td>
						<td>@order.Client.LastName</td>
						<td>@order.Device.Name</td>
						<td>@order.Device.Type</td>
						@if (order.Device.OnGuarantee)
						{
							<td>Yes</td>
							<td class="text-center"> - </td>
						} else
						{
							<td>No</td>
							<td>@order.AmountToPay</td>
						}
						<td>@order.Master.FirstName</td>
						<td>@order.Master.LastName</td>
						<td><a asp-controller="Panel" asp-action="MoreDetails" asp-route-id="@order.OrderId" class="btn btn-info">More details</a></td>
						<td><a asp-controller="Home" asp-action="EditOrder" asp-route-id="@order.OrderId" class="btn btn-warning">Edit order</a></td>
						<td><a asp-controller="Home" asp-action="DeleteOrder" asp-route-id="@order.OrderId" class="btn btn-danger">Delete order</a></td>
					</tr>
					}
				</tbody>
			</table>
		}
	</div>
</div>