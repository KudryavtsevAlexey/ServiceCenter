@model ClientViewModel
<div class="container d-flex justify-content-center text-center mt-5">
	<div>
		<div>
			<h3 class="display-5">
				Checking the repair status
			</h3>
		</div>
		<form asp-controller="Order" asp-action="CheckOrderStatus" method="post">
			<div asp-validation-summary="ModelOnly"></div>
			<div class="mb-3 form-group">
				<label asp-for="FirstName" class="form-label"></label>
				<input asp-for="FirstName" class="form-control" />
				<span asp-validation-for="FirstName"></span>
			</div>
			<div class="mb-3 form-group">
				<label asp-for="LastName" class="form-label"></label>
				<input asp-for="LastName" class="form-control" />
				<span asp-validation-for="LastName"></span>
			</div>
			<div class="mb-3 form-group">
				<label asp-for="Email" class="form-label"></label>
				<input asp-for="Email" class="form-control" />
				<span asp-validation-for="Email"></span>
			</div>
			<div class="mb-3 form-group">
				<button class="btn btn-primary" type="submit" asp-controller="Order" asp-action="CheckOrderStatus">
					Check order status
				</button>
			</div>
			<div class="mb-3 form-group">
				<a asp-controller="Home" asp-action="Index" class="btn btn-info">Return to home page</a>
			</div>
		</form>
	</div>
</div>